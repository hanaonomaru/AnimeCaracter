<h1>Characters#index</h1>
<p>Find me in app/views/characters/index.html.erb</p>

<table>
    <tr>
        <td>Name</td>
        <td>Age</td>
        <td>Gender</td>
        <td>Voice Acter</td>
    </tr>
    <% @characters.each do |v| %>
    <tr>
        <td><%= v.name %></td>
        <td><%= v.age %></td>
        <td><%= v.gender.value %></td>
        <td><%= v.voice_acter %></td>
    </tr> 
    <% end %>
</table>

<% if @character.errors %>
    <% @character.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
<% end %>

<%= form_with model: @character, url: "/characters" do |f| %>
    <%= f.text_field :name %><br>
    <%= f.text_field :age %><br>
    <%= f.select :gender, @genders.map { |g| [g.value, g.id] }, {include_blank: '選択してください'} %><br>
    <%= f.text_field :voice_acter %><br>
    <%= f.submit "送信" %>
<% end %>
